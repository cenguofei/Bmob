<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.mine.MineFragment">

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/back_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="118dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="160dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="早上好，☀"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="153dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="183dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="14dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="我"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_info_bg"
        android:drawableStart="@drawable/username_img"
        android:drawablePadding="15dp"
        android:gravity=""
        android:hint="XX学校"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text=""
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="232dp" />

    <LinearLayout
        android:id="@+id/reLogin"
        android:layout_width="350dp"
        android:background="@drawable/mine_option_bg"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="438dp">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/mine_relogin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="退出登录"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_option_bg"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="539dp">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/mine_changeid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="切换账号"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 设置"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/mine_setting"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="378dp" />


</androidx.constraintlayout.widget.ConstraintLayout>