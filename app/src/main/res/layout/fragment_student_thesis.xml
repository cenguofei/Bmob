<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="student"
            type="com.example.bmob.data.entity.User" />
        <variable
            name="view"
            type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout17"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.student.oneThesis.StudentThesisFragment">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/back_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="176dp"
            android:gravity="center_vertical"
            android:text="@string/s_m_t"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.44" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView21"
            loadHeadImage='@{student.studentSelectState?student.theTeaAvaUrl:""}'
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:riv_corner_radius="15dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:text='@{student.studentSelectState?student.theTeaDetail:""}'
            android:textColor="@color/grey_light"


            android:textSize="10sp"

            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView21"
            tools:ignore="SmallSp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView21">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_info_bg"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="10sp"
                    android:text='@{student.studentSelectState?("课题名称:"+student.title):""}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/mine_info_bg"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="10sp"
                    android:text='@{student.studentSelectState?("研究方向:"+student.field):""}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.512"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/mine_info_bg"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="10sp"
                    android:text='@{student.studentSelectState?("要求:"+student.require):""}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.487"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/mine_info_bg"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="10sp"
                    android:text='@{student.studentSelectState?("简介:"+student.desc):""}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.512"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
            android:id="@+id/outButton"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/btn_round_bg"
            android:text="@string/exit"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility='@{student.studentSelectState?view.VISIBLE:view.GONE}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/selectThesisBtn"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/btn_round_bg"
            android:text="@string/s_t"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility='@{student.studentSelectState?view.GONE:view.VISIBLE}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/waitApproveIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="82dp"
            android:visibility="gone"
            android:layout_marginBottom="82dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:srcCompat="@drawable/wait_approve_img"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/approvedIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="82dp"
            android:layout_marginBottom="82dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:srcCompat="@drawable/approved_img"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/rejectedIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="82dp"
            android:layout_marginBottom="82dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:srcCompat="@drawable/rejected_img"
            android:contentDescription="@string/todo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

